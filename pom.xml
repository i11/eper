<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.erlang</groupId>
	<artifactId>eper</artifactId>
	<version>0.69.0-SNAPSHOT</version>
	<packaging>erlang-std</packaging>
	<name>eper</name>
	<description>Erlang Performance and Debugging Tools</description>
	<scm>
		<connection>scm:git:https://github.com/i11/eper.git</connection>
		<developerConnection>scm:git:https://github.com/i11/eper.git</developerConnection>
		<url>scm:git:https://github.com/i11/eper.git</url>
	</scm>
	<build>
		<plugins>
			<plugin>
				<groupId>eu.lindenbaum</groupId>
				<artifactId>maven-erlang-plugin</artifactId>
				<version>2.2.0</version>
				<extensions>true</extensions>
				<configuration>
					<skipDialyzer>true</skipDialyzer>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
